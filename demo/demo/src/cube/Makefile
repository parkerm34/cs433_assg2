####################################################################################################

CC = gcc

LIBALIASES = -lGL -lGLU -lglut -lm -ljpeg -Wall

APPNAME = cube

APPCODE = \
	cube.c

APPOBJS = $(APPCODE:.c=.o)

.SILENT:

%.o: %.c
	echo Compiling $< 
	$(CC) -c $<

####################################################################################################

all:
	make $(APPNAME)

$(APPNAME): $(APPOBJS)
	$(CC) -o $(APPNAME) $(APPOBJS) $(LIBALIASES)
	echo Build complete!

####################################################################################################

clean:
	rm -f *.o $(APPNAME)
	echo All clean!

####################################################################################################
